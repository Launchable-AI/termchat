{
  "name": "termchat",
  "version": "1.0.0",
  "description": "A beautiful terminal chat client for LLMs, inspired by OpenCode",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "termchat": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.tsx",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "terminal",
    "chat",
    "llm",
    "openrouter",
    "ai",
    "tui",
    "ink",
    "vim"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/termchat"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "clipboardy": "^5.0.1",
    "conf": "^13.0.1",
    "dotenv": "^17.2.3",
    "figures": "^6.1.0",
    "fuzzysort": "^3.1.0",
    "ink": "^5.0.1",
    "ink-text-input": "^6.0.0",
    "marked": "^15.0.0",
    "marked-terminal": "^7.2.0",
    "meow": "^13.2.0",
    "nanoid": "^5.0.8",
    "ora": "^8.1.1",
    "react": "^18.3.1",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
